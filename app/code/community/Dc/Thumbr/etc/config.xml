<config>
    <modules>
        <Dc_Thumbr>
            <version>0.2.2</version>
        </Dc_Thumbr>
    </modules>
    <adminhtml>
        <translate>
            <modules>
                <Dc_Thumbr>
                    <files>
                        <default>Dc_Thumbr.csv</default>
                    </files>
                </Dc_Thumbr>
            </modules>
        </translate>
    </adminhtml>
    <global>
        <helpers>
            <thumbr>
                <class>Dc_Thumbr_Helper</class>
            </thumbr>
            <catalog>
                <rewrite>
                    <image>Dc_Thumbr_Helper_Image</image>
                </rewrite>
            </catalog>
        </helpers>
        <models>
            <thumbr>
                <class>Dc_Thumbr_Model</class>
            </thumbr>
            <catalog>
                <rewrite>
                    <product_image>Dc_Thumbr_Model_Product_Image</product_image>
                </rewrite>
            </catalog>
        </models>
    </global>
</config>
